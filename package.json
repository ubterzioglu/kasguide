{
  "name": "kasguide",
  "version": "2.0.0",
  "description": "Kaş Guide - Local guide platform with database-backed submissions",
  "private": true,
  "type": "module",
  "scripts": {
    "db:reset": "node db/reset-database.js",
    "db:migrate": "node db/migrate.js",
    "db:seed": "node db/migrate.js seeds",
    "db:import": "node db/import-data.js",
    "db:import:places": "node db/import-data.js places",
    "db:import:hotels": "node db/import-data.js hotels",
    "db:import:pets": "node db/import-data.js pets",
    "db:import:articles": "node db/import-data.js articles",
    "db:import:faqspecial": "node db/import-data.js faqspecial",
    "db:import:faqs": "node db/import-data.js faqs",
    "db:setup": "node db/migrate.js && node db/import-data.js",
    "db:unified": "node db/migrate-unified.js",
    "db:unified:schema": "node db/migrate-unified.js schema-only",
    "db:unified:data": "node db/migrate-unified.js data-only",
    "db:unified:verify": "node db/migrate-unified.js verify",
    "db:unified:rollback": "node db/migrate-unified.js rollback",
    "dev": "vercel dev",
    "build": "echo 'Static site - no build needed'",
    "start": "vercel dev"
  },
  "dependencies": {
    "@vercel/blob": "^2.0.0",
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^17.2.3",
    "formidable": "^3.5.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "kas",
    "guide",
    "turkey",
    "travel",
    "database"
  ],
  "author": "Kaş Guide Team",
  "license": "UNLICENSED",
  "main": "categories.js",
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubterzioglu/kasguide.git"
  },
  "bugs": {
    "url": "https://github.com/ubterzioglu/kasguide/issues"
  },
  "homepage": "https://github.com/ubterzioglu/kasguide#readme"
}
